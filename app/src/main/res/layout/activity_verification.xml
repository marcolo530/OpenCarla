<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="miraclegeneration.opencarla.verification">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_logo"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="false"
            android:layout_weight="0.19"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="你將會收到一個驗證碼，請查看手機SMS"
            android:id="@+id/textView18"
            android:layout_weight="0.11" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12">

            <EditText
                android:background="@android:drawable/edit_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"

                android:allowUndo="true"

                android:autoText="true"
                android:theme="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
                android:singleLine="false"
                android:nestedScrollingEnabled="false" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="41dp"
                android:id="@+id/confirm"
                android:src="@drawable/confirm"
                android:background="#00000000" />


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="若收不到驗證碼, 請按 "
                android:id="@+id/textView22" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resend"
                android:src="@drawable/ic_resend"
                android:background="#00000000"
                android:layout_weight="0.19"
                android:layout_gravity="right|center_horizontal" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
